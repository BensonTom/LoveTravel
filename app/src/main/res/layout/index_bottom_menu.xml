<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/bottomTabColor"
    android:baselineAligned="false">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/id_tabBarWorld"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="25%">

        <ImageButton
            android:id="@+id/id_tabBarWorld_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="@mipmap/icon_home_selected_0975ff"
            />

        <TextView
            android:id="@+id/id_tabBarWorld_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bottomMenu_home"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/id_tabBarFriends"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="25%">

        <ImageButton
            android:id="@+id/id_tabBarFriends_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_message_normal_929292"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/id_tabBarFriends_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="@string/bottomMenu_message"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>


    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/id_tabBarMessage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="25%">

        <ImageButton
            android:id="@+id/id_tabBarMessage_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_travel_normal_929292"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/id_tabBarMessage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bottomMenu_travel"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/id_tabBarProfile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="25%">

        <ImageButton
            android:id="@+id/id_tabBarProfile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_me_normal_929292"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/id_tabBarProfile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bottomMenu_me"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>